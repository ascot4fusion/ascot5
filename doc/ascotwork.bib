author = {A Hakola and M I Airila and C Björkas and D Borodin and S Brezinsek and J P Coad and M Groth and A Järvinen and A Kirschner and S Koivuranta and K Krieger and T Kurki-Suonio and J Likonen and V Lindholm and T Makkonen and M Mayer and J Miettunen and H W Müller and R Neu and P Petersson and V Rohde and M Rubel and A Widdowson and the ASDEX Upgrade Team and JET-EFDA Contributors},
title = {Global migration of impurities in tokamaks},
journal = {Plasma Physics and Controlled Fusion},
abstract = {The migration of impurities in tokamaks has been studied with the help of tracer-injection (13C and 15N) experiments in JET and ASDEX Upgrade since 2001. We have identified a common pattern for the migrating particles: scrape-off layer flows drive impurities from the low-field side towards the high-field side of the vessel. Migration is also sensitive to the density and magnetic configuration of the plasma, and strong local variations in the resulting deposition patterns require 3D treatment of the migration process. Moreover, re-erosion of the deposited particles has to be taken into account to properly describe the migration process during steady-state operation of the tokamak.}
}

@article{Kramer_2013,
