    "version": "0.2.0",
    "configurations": [
        {
            "name": "ascot_main",
            "type": "cppdbg",
            "request": "launch",
            // "program": "${fileDirname}/bmc_main",
            "program": "${workspaceRoot}/ascot5_main",
            "args": ["--in", "helloworld"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "/usr/bin/gdb"
        },
        {
            "name": "bmc_main",
